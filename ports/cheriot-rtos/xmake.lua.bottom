
firmware("micropython")
    add_deps("freestanding", "debug")
    add_deps("string", "stdio")
    add_deps("mp_main")
    on_load(function(target)
        target:values_set("board", "$(board)")
        target:values_set("threads", {
            {
                compartment = "mp_main",
                priority = 1,
                entry_point = "mp_main",
                stack_size = 0x800,
                trusted_stack_frames = 4
            }
        }, {expand = false})
    end)

